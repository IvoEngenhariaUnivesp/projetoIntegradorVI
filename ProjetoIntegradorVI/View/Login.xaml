<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoIntegradorVI.View.Login">
    <ContentPage.Content>
        <StackLayout Spacing="50" Padding="20">
            <Label Text="BEM VINDO!" FontSize="Title" HorizontalOptions="CenterAndExpand"/>
            
            <StackLayout>
                <Label Text="Usuário"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
                <Entry x:Name="user" Placeholder="Digite seu Usuário"/>
            </StackLayout>
            <StackLayout>
                <Label Text="Senha"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
                <Entry IsPassword="True" Keyboard="Numeric" x:Name="senha" Placeholder="******"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>