    <ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Convites"
             x:Name="tabConvites">
        <ContentPage.Content>
            <StackLayout>
                <StackLayout Spacing="0" BackgroundColor="#3B529F" HeightRequest="50">
                    <Label Text="Detalhes do Evento" TextColor="FloralWhite" FontSize="Title" FontAttributes="Bold" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
                </StackLayout>
                <ScrollView>
                    <StackLayout Spacing="0" Padding="15">
                        <StackLayout>
                            <Frame WidthRequest="90" HeightRequest="100" HasShadow="True">
                                <Label Text="Testando Detalhes do Evento" TextColor="#ccc" FontSize="Default" />
                            </Frame>
                        </StackLayout>
                    </StackLayout>
                </ScrollView>
            </StackLayout>
        </ContentPage.Content>
    </ContentPage>
</TabbedPage>